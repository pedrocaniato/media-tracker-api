generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

// ----------------------------------------------------
// SEUS MODELOS DE DADOS (USER, MEDIA, USERMEDIA)
// ----------------------------------------------------

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  password  String
  name      String?
  createdAt DateTime    @default(now())

  media     UserMedia[]
}

model UserMedia {
  id          String   @id @default(cuid())

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  // üîë identidade da m√≠dia (vem da API externa)
  uniqueId    String   // TMDB:movie:550 | GB:abc
  type        String   // filme | serie | livro
  title       String
  posterUrl   String?
  releaseYear Int?

  // üìå status do usu√°rio
  status      MediaStatus

  // ‚≠ê avalia√ß√£o
  rating      Float?
  review      String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // üö® regra de ouro
  @@unique([userId, uniqueId])
}

enum MediaStatus {
  VISTO
  ASSISTINDO
  QUERO_VER
}
